<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/tool_bar"
    android:background="@color/background"
    tools:context="com.example.lavinia.project.NewActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/toolbar"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <TextView
        android:id="@+id/changeEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:layout_below="@+id/toolbar"
        android:fontFamily="casual"
        android:textStyle="italic"
        android:textSize="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/changeFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="First name"
        android:layout_below="@+id/changeEmail"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editChangeFirstName"
        android:layout_below="@+id/changeFirstName"
        android:backgroundTint="@color/black"
        android:textCursorDrawable="@null"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/changeLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Last name"
        android:layout_below="@+id/editChangeFirstName"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginLeft="5dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editChangeLastName"
        android:layout_below="@+id/changeLastName"
        android:backgroundTint="@color/black"
        android:textCursorDrawable="@null"
        android:textColor="@color/black"/>


    <TextView
        android:id="@+id/changePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_below="@+id/editChangeLastName"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginLeft="5dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editChangePassword"
        android:layout_below="@+id/changePassword"
        android:backgroundTint="@color/black"
        android:inputType="textPassword"
        android:textCursorDrawable="@null"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/changePasswordConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm password"
        android:layout_below="@+id/editChangePassword"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginLeft="5dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/editChangePasswordConfirm"
        android:layout_below="@+id/changePasswordConfirm"
        android:backgroundTint="@color/black"
        android:textCursorDrawable="@null"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/changeRegPlate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registration plate"
        android:layout_below="@+id/editChangePasswordConfirm"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginLeft="5dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editChangeRegPlate"
        android:layout_below="@+id/changeRegPlate"
        android:backgroundTint="@color/black"
        android:textCursorDrawable="@null"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/saveChangedSettings"
        android:onClick="saveChangedSettings"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="Save"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@color/black"
        android:layout_below="@+id/editChangeRegPlate"
        android:layout_centerHorizontal="true" />
</RelativeLayout></ScrollView>